{
  "formatVersion": 1,
  "identifier": "lightsaber_mod:lightsaber_trail",
  "name": "Lightsaber Trail Effect",
  "type": "trail_system",
  
  "trail": {
    "attachPoint": "blade_tip",
    "segments": 16,
    "updateRate": 60,
    
    "width": {
      "start": 0.12,
      "end": 0.0,
      "curve": "easeOut"
    },
    
    "length": {
      "maxSegments": 16,
      "fadeTime": 0.2
    },
    
    "material": {
      "texture": "textures/effects/trail_gradient.png",
      "blendMode": "additive",
      "twoSided": true
    },
    
    "color": {
      "mode": "gradient",
      "gradient": [
        { "position": 0.0, "color": [255, 255, 255], "opacity": 1.0 },
        { "position": 0.3, "color": "inherit", "opacity": 0.9 },
        { "position": 0.7, "color": "inherit", "opacity": 0.5 },
        { "position": 1.0, "color": "inherit", "opacity": 0.0 }
      ]
    },
    
    "distortion": {
      "enabled": true,
      "type": "wave",
      "amplitude": 0.01,
      "frequency": 8.0
    }
  },
  
  "lighting": {
    "emitsLight": true,
    "lightColor": "inherit",
    "lightIntensity": 0.5,
    "lightFalloff": "linear"
  }
}
