{
  "id": "lightsaber_plugin",
  "name": "Lightsaber Plugin",
  "version": "1.0.0",
  "description": "Server-side logic for the Lightsaber Mod",
  "authors": ["Claude AI"],
  "main": "com.lightsaber.LightsaberPlugin",
  "api_version": "0.1.0",
  "dependencies": [],
  "soft_dependencies": [],
  "load_order": "POSTWORLD",
  "permissions": {
    "lightsaber.give": {
      "description": "Allows giving lightsabers to players",
      "default": "op"
    },
    "lightsaber.craft": {
      "description": "Allows crafting lightsabers",
      "default": true
    },
    "lightsaber.duel": {
      "description": "Allows initiating lightsaber duels",
      "default": true
    }
  },
  "commands": {
    "lightsaber": {
      "description": "Lightsaber mod commands",
      "usage": "/lightsaber <give|color|duel>",
      "aliases": ["ls", "saber"]
    }
  }
}
